<div class="indexPage">

  <% @ideas.each do |idea|%>
    <div class="card" style="width: 30rem; margin: 20px;">
      <div class="card-body">
        <h4 class="card-title">
        <%= link_to idea.title, idea_path(idea), style:'color:#39CCCC;'%>
        </h4>
        <h5 class="card-subtitle mb-2 text-muted">
        <%= idea.description.truncate_words(10) %>
        </h5>

        <% like = idea.likes.find_by(user: current_user)%>
        <% if like.present? %>
          <%= link_to "Liked", like_path(like), method: :delete,  class: "btn btn-outline-info btn-sm"%>
        <% else %>
            <% if can?(:like, idea) %>
            <%= link_to "Like",  idea_likes_path(idea), method: :post,  class: "btn btn-info btn-sm" %>
            <% end %>
        <%end%>
        <small style='font-weight: 600; color:#0074D9;'>  â€¢ Likes: <%= idea.likes.count%> </small>
      </div>
    </div>
  <% end %>
</div>