<!DOCTYPE html>
<html>
  <head>
    <title>IdeaFactory</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="navBar d-flex flex-row justify-content-between align-items-center sticky-top">
      <nav class="nav justify-content-start"">
        <%= image_tag("lightbulb.jpg", alt: "#", class: "logo" )%>
        <a class="navbar-brand h1 nav-link active fs-3" style="color:#3D9970" aria-current="page" href="#">Idea Factory</a>
      </nav>
        <ul class="nav justify-content-end">
          <li class="nav-item">
            <%=link_to "Idea", ideas_path, class: "nav-link active", ariaCurrent: "page", style:'color:#3D9970;'%>
          </li>
          <li class="nav-item">
            <%=link_to "New", new_idea_path, class: "nav-link", style:'color:#3D9970;'%>
          </li>

          <% if user_signed_in? %>
            <li class="nav-item">
              <p class="nav-link">Hello <%= current_user.name %></p>    
            </li>          
            <li class="nav-item">
              <%=link_to "Logout", session_path, method: :delete,  class: "nav-link", style:'color:#3D9970;' %>
            </li>          
          <% else %>
            <li class="nav-item">
              <%=link_to "Log In", new_session_path, class: "nav-link", style:'color:#3D9970;' %>
            </li>
            <li class="nav-item">
              <%=link_to "Sign Up", new_user_path, class: "nav-link", style:'color:#3D9970;' %>
            </li>
          <% end %>
        </ul>
    </div>
  
    <% if flash[:notice].present? %>
      <div class="alert alert-success aler-dismissible fade show" role="alert">
        <%= flash[:notice]%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">
          &times;
        </span>
        </button>
      </div>
    <% elsif flash[:alert].present?%>
      <div class="alert alert-danger aler-dismissible fade show" role="alert">
        <%= flash[:alert]%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">
          &times;
        </span>
        </button>
      </div>
    <% end %>

  
  <%#= flash[:notice] || flash[:alert] %>
    <%= yield %>
  </body>
</html>
